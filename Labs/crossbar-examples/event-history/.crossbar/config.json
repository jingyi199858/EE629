{
    "version": 2,
    "workers": [
        {
            "type": "router",
            "realms": [
                {
                    "name": "realm1",
                    "roles": [
                        {
                            "name": "anonymous",
                            "permissions": [
                                {
                                    "uri": "com.example.oncounter",
                                    "match": "exact",
                                    "allow": {
                                        "publish": true,
                                        "subscribe": true
                                    },
                                    "disclose": {
                                        "publisher": true
                                    },
                                    "cache": true
                                },
                                {
                                    "uri": "wamp.subscription.get_events",
                                    "match": "exact",
                                    "allow": {
                                        "call": true
                                    },
                                    "disclose": {
                                        "caller": true
                                    },
                                    "cache": true
                                }
                            ]
                        }
                    ],
                    "store": {
                        "type": "memory",
                        "limit": 100,
                        "event-history": [
                            {
                                "uri": "com.example.oncounter",
                                "match": "exact",
                                "limit": 1000
                            }
                        ]
                    }
                }
            ],
            "transports": [
                {
                    "type": "web",
                    "endpoint": {
                        "type": "tcp",
                        "port": 8080
                    },
                    "paths": {
                        "/": {
                            "type": "static",
                            "directory": "../web"
                        },
                        "shared": {
                            "type": "static",
                            "directory": "../../_shared-web-resources"
                        },
                        "ws": {
                            "type": "websocket"
                        }
                    }
                }
            ]
        }
    ]
}
