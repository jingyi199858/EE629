{
    "version": 2,
    "workers": [
        {
            "type": "router",
            "options": {
                "pythonpath": [
                    ".."
                ]
            },
            "realms": [
                {
                    "name": "realm1",
                    "roles": [
                        {
                            "name": "anonymous",
                            "permissions": [
                                {
                                    "uri": "",
                                    "match": "prefix",
                                    "allow": {
                                        "call": true,
                                        "register": true,
                                        "publish": true,
                                        "subscribe": true
                                    },
                                    "disclose": {
                                        "caller": false,
                                        "publisher": false
                                    },
                                    "cache": true
                                }
                            ]
                        }
                    ]
                }
            ],
            "transports": [
                {
                    "type": "web",
                    "endpoint": {
                        "type": "tcp",
                        "port": 8080
                    },
                    "paths": {
                        "/": {
                            "type": "static",
                            "directory": "../web"
                        },
                        "ws": {
                            "type": "websocket"
                        },
                        "config": {
                            "type": "json",
                            "value": {
                                "param1": "foobar",
                                "param2": [
                                    1,
                                    2,
                                    3
                                ],
                                "param3": {
                                    "awesome": true,
                                    "nifty": "yes"
                                }
                            },
                            "options": {
                                "prettify": false,
                                "allow_cross_origin": true,
                                "discourage_caching": true
                            }
                        },
                        "call": {
                            "type": "caller",
                            "realm": "realm1",
                            "role": "anonymous"
                        }
                    }
                }
            ],
            "components": [
                {
                    "type": "class",
                    "classname": "adder.AppSession",
                    "realm": "realm1",
                    "role": "anonymous"
                }
            ]
        }
    ]
}
